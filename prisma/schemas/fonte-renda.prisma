// ============================================
// MODEL: FONTE RENDA - Fontes de renda do usuário
// ============================================
// Exemplos: Salário, Freelance, Investimentos, Aluguel recebido
// Representam as entradas de dinheiro do usuário

model FonteRenda {
  id             Int       @id @default(autoincrement())
  userId         Int
  categoriaId    Int
  nome           String
  valorEstimado  Decimal?  @db.Decimal(10, 2)
  diaRecebimento Int? // Dia do mês (1-31)
  status         Boolean   @default(true) // true = ativa, false = inativa
  mensalmente    Boolean   @default(false)
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deletedAt      DateTime?

  // Relacionamentos
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoria   Categoria    @relation(fields: [categoriaId], references: [id], onDelete: Cascade)
  lancamentos Lancamento[]

  @@index([userId])
  @@index([categoriaId])
  @@index([status])
  @@map("fontes_renda")
}
